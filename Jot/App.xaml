<Application
    x:Class="Jot.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Views/MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/Menu.xaml" />
                <ResourceDictionary Source="Theme/MenuItem.xaml" />
                <ResourceDictionary Source="Theme/TextBlock.xaml" />
                <ResourceDictionary Source="Theme/TextBox.xaml" />
                <ResourceDictionary Source="Theme/ListView.xaml" />
                <ResourceDictionary Source="Theme/ComboBox.xaml" />
                <ResourceDictionary Source="Theme/ComboBox.xaml" />
                <ResourceDictionary Source="Theme/ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="FiraMonoRegular">./Fonts/FiraMono-Regular.ttf#Fira Mono</FontFamily>
            <FontFamily x:Key="FiraSansBlack">./Fonts/FiraSans-Black.ttf#Fira Sans Black</FontFamily>
            <FontFamily x:Key="FiraSansRegular">./Fonts/FiraSans-Regular.ttf#Fira Sans</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
